# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                   controllers.Application.index()
# Deprecated
GET           /concept                            controllers.Application.concept()
GET           /read-only                          controllers.Application.browser()
GET           /browser                            controllers.Application.browser()
GET           /create                             controllers.Application.create()

GET           /api/au-tree                        controllers.TreeView.tree()

#Alternate
GET           /api/locations/:gid.jsonp           controllers.LocationServices.jsonp(gid:Long, callback:String ?="jsonp", maxExteriorRings:java.lang.Integer ?= null)
GET           /api/locations/:gid.:format         controllers.LocationServices.locations(gid:Long, format, maxExteriorRings:java.lang.Integer ?= null)

POST          /api/locations                      controllers.LocationServices.create()
GET           /api/locations/$gid<[0-9]+>         controllers.LocationServices.locations(gid:Long, format?="GeoJSON", maxExteriorRings:java.lang.Integer?=null)
PUT           /api/locations/$gid<[0-9]+>         controllers.LocationServices.update(gid:Long)
DELETE        /api/locations/$gid<[0-9]+>         controllers.LocationServices.delete(gid:Long)

GET           /api/locations              		  controllers.LocationServices.filterByTerm(queryTerm?=null, limit:Int?=10, offset:Int?=0, searchOtherNames:Boolean?=true, q?=null, verbose:Boolean?=false)
POST          /api/locations/find-bulk            controllers.LocationServices.findBulkLocations()
POST          /api/locations/find-by-term         controllers.LocationServices.findByTerm()
GET           /api/locations/find-by-coordinate   controllers.LocationServices.findByPoint(lat:Double, long:Double, verbose:Boolean?=false)
POST          /api/locations/find-by-geometry     controllers.LocationServices.findByFeatureCollection(superTypeId:java.lang.Long ?= null, typeId:java.lang.Long ?= null, verbose:Boolean?=false)
GET			  /api/locations/find-by-type/:id	  controllers.LocationServices.findByTypeId(id:Long)
GET           /api/locations/unique-names    	  controllers.LocationServices.listUniqueNames(queryTerm, limit:Int?=10)

GET           /api/super-types                    controllers.ListServices.findSuperTypes()
GET           /api/location-types                 controllers.ListServices.findLocationTypes(superTypeId:java.lang.Long ?= null)

GET           /api/geometry-metadata/:gid         controllers.LocationServices.getGeometryMetadata(gid:Long, tolerance:java.lang.Double?=null)
GET			  /api/update-cache					  controllers.LocationServices.updateCache()

# Deprecated. Use /api/locations/find-bulk
POST           /api/find-bulk                	  controllers.LocationServices.findBulk()
# Deprecated
GET           /api/locations/byCoordinate         controllers.LocationServices.findByLocationPoint(lat:Double, long:Double, verbose:Boolean?=false)
# Deprecated. Use /api/locations/find-by-coordinate
GET           /api/locations-by-coordinate        controllers.LocationServices.findByLocationPoint(lat:Double, long:Double, verbose:Boolean?=false)
# Deprecated. Use /api/locations/find-by-geometry
POST          /api/locations-by-geometry          controllers.LocationServices.findByLocationFeatureCollection(superTypeId:java.lang.Long ?= null, typeId:java.lang.Long ?= null, verbose:Boolean?=false)
# Deprecated. Use /api/locations/list-unique-names
GET           /api/unique-location-names          controllers.LocationServices.findLocationNames(q, limit:Int?=10)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                       controllers.Assets.at(path="/public", file)

# Swagger API documentation
GET           /api-docs                           controllers.Application.swagger()
GET     	  /api-docs.json					  @pl.matisoft.swagger.ApiHelpController.getResources
GET			  /api-docs.json*path				  @pl.matisoft.swagger.ApiHelpController.getResource(path)

# Test page
GET     	  /test/acceptance            		  controllers.Test.acceptance()