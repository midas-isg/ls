# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/							controllers.Application.index()
GET		/read-only					controllers.Application.readOnly()

# GEO-JSON Map CRUD Operations
POST	/resources/aus					controllers.AdministrativeUnitServices.create()
GET		/resources/aus/:gid				controllers.AdministrativeUnitServices.read(gid)
PUT		/resources/aus					controllers.AdministrativeUnitServices.update()
DELETE	/resources/aus					controllers.AdministrativeUnitServices.delete()

GET		/api/locations/:gid			controllers.EpidemicZoneServices.locations(gid)

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file				controllers.Assets.at(path="/public", file)
